# .env file for Express REST API
MONGODB_URI=mongodb://localhost:27017/event_management

POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=event_management
POSTGRES_USER=postgres
POSTGRES_PASSWORD=xxxxxxxxxxxxx

JWT_SECRET=supersecret
PORT=5000

REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=xxxxxxxxxxx   # nếu bạn chưa đặt pass thì để trống

EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=xxxxxxxxxxxx@gmail.com
EMAIL_PASS=xxxxxxxxxxxxxxxx      # App Password 16 ký tự từ Google
EMAIL_FROM="Event Management <xxxxxxxxxxxx@gmail.com>"

# Rate limit (global)
RATE_LIMIT_WINDOW_MS=900000          # 15 phút
RATE_LIMIT_MAX_REQUESTS=100          # tối đa 100 request / 15 phút / IP

# Rate limit (login)
LOGIN_RATE_LIMIT_WINDOW_MS=300000    # 5 phút
LOGIN_RATE_LIMIT_MAX_REQUESTS=5      # tối đa 5 lần login / 5 phút / IP


# URL public để build image_url
BASE_URL=http://localhost:5000

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf
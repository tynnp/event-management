# .env file for Express REST API

# Server Configuration
SERVER_HOST=localhost
SERVER_PORT=5000
PORT=${SERVER_PORT}

# Database - PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=event_management
POSTGRES_USER=postgres
POSTGRES_PASSWORD=xxxxxxxxxxxxx

# Database - MongoDB
MONGODB_HOST=localhost
MONGODB_URI=mongodb://${MONGODB_HOST}:27017/event_management

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=xxxxxxxxxxx   # nếu bạn chưa đặt pass thì để trống

# JWT Configuration
JWT_SECRET=supersecret

# Email Configuration (Gmail)
EMAIL_USER=xxxxxxxxxxxx@gmail.com
EMAIL_PASS=xxxxxxxxxxxxxxxx      # App Password 16 ký tự từ Google
EMAIL_FROM="Event Management <xxxxxxxxxxxx@gmail.com>"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000          # 15 phút
RATE_LIMIT_MAX_REQUESTS=5000          # tối đa 5000 request / 15 phút / IP
LOGIN_RATE_LIMIT_WINDOW_MS=300000    # 5 phút
LOGIN_RATE_LIMIT_MAX_REQUESTS=5      # tối đa 5 lần login / 5 phút / IP

# URL Configuration
BASE_URL=http://${SERVER_HOST}:${SERVER_PORT}
PUBLIC_APP_URL=http://localhost:5173

# File Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf